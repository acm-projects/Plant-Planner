<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFAE0">

    <TextView
        android:id="@+id/brownline4"
        android:layout_width="370dp"
        android:layout_height="5dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/brownline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantSearch" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchPlantsRV"
        android:layout_width="370dp"
        android:layout_height="488dp"
        app:layout_constraintBottom_toTopOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brownline4" />

    <View
        android:id="@+id/topBox"
        android:layout_width="420dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:background="#84A98C"
        tools:ignore="VisualLintBounds" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="81dp"
        android:layout_height="71dp"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/leaf" />

    <View
        android:id="@+id/view3"
        android:layout_width="420dp"
        android:layout_height="110dp"
        android:layout_marginTop="616dp"
        android:background="#84A98C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="VisualLintBounds" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="398dp"
        android:layout_height="102dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:contentDescription="go to profile"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@drawable/bottomprofileicon" />

        <ImageButton
            android:id="@+id/calendarButton"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:contentDescription="go to calendar"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@drawable/calendaricon" />

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:backgroundTint="#5A5A5A"
            android:contentDescription="go to search"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@drawable/searchicon" />

        <ImageButton
            android:id="@+id/plantButton"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:contentDescription="go to plants"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@drawable/planticon" />

        <ImageButton
            android:id="@+id/helpButton"
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:contentDescription="go to help"
            android:scaleType="fitCenter"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@drawable/helpicon" />

    </LinearLayout>

    <TextView
        android:id="@+id/PlantPlannertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Plant Planner"
        android:textColor="#143822"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topBox"
        app:layout_constraintVertical_bias="0.025" />

    <SearchView
        android:id="@+id/plantSearch"
        android:layout_width="321dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:iconifiedByDefault="false"
        android:queryHint="Search for Plants Here!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBox" />


</androidx.constraintlayout.widget.ConstraintLayout>